<main>
    <div class="container">
        <div class="col-9">

            <!-- Start Pet Photo Post Section -->
            <div class="card">
                <div class="top">

                    <!-- Start User Details and Image Location Section -->
                    <div class="userDetails">

                        <!-- Link to User Profile Details Page-->
                        <div>
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img src="/images/person.png" alt="img8">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3>

                            <!-- Link to User Profile Details Page -->
                            <p>
                                <!-- User's username -->
                                {{photo.owner.username}}
                            </p>
                            <!-- photo's location -->
                            <span>{{photo.location}}</span>

                            {{#if isOwner}}
                            <div class="edit-delete-btns">

                                <!-- Edit Pet Photo -->
                                <a href="/users/{{photo._id}}/edit">
                                    <img class="edit-img" src="/images/edit-pen-icon-6.jpg" alt="edit button">
                                </a>

                                <!--Delete Pet Photo -->
                                <a href="/users/{{photo._id}}/delete">
                                    <img class="bin-img" src="/images/icon-remove-22.jpg"  onclick="return confirm('Are You sure ?');" alt="bin button">
                                </a>
                            </div>
                            {{/if}}

                        </h3>
                    </div>

                </div>

                <!-- Start Pet Photo -->
                <div class="imgBx">
                    <!-- Pet Photo -->
                    <img src={{photo.image}} alt="post" class="cover">
                </div>



                <div class="bottom">

                    <p class="message">
                        <b class="petDescription">{{photo.description}}</b>
                    </p>


                    <!-- Photo description -->
                    <div class="pet-details">
                        <p class="petName">Name: {{photo.name}}</p>
                        <p class="petAge">Age: {{photo.age}}</p>
                    </div>
                    <div class="comments">
                        <div class="comments-top">
                            {{#each photo.comments}}
                            {{>comment}}
                            {{/each}}

                        </div>
                    </div>
                </div>
                <div class="addComments">
                    <!-- Start Add Comments Form -->
                    {{#if isAuthenticated}}
                    {{#unless isOwner}}
                    <form method="POST" action="/users/{{photo._id}}/comments">
                        <textarea id="comment-textarea" name="message" cols="40" rows="10"
                            placeholder="Add comment..."></textarea>
                        <!-- Post Comments Button -->
                        <button type="submit">Post</button>
                        {{/unless}}
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>